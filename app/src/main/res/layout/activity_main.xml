<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.khoaphamtraining.khoapham.sqlitesound0305.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghi"
        android:id="@+id/buttonGhi"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dung"
        android:id="@+id/buttonDung"
        android:layout_alignTop="@+id/buttonGhi"
        android:layout_toRightOf="@+id/buttonGhi"
        android:layout_toEndOf="@+id/buttonGhi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phat"
        android:id="@+id/buttonPhat"
        android:layout_alignTop="@+id/buttonDung"
        android:layout_toRightOf="@+id/buttonDung"
        android:layout_toEndOf="@+id/buttonDung" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dung phat"
        android:id="@+id/buttonDungPhat"
        android:layout_alignTop="@+id/buttonPhat"
        android:layout_toRightOf="@+id/buttonPhat"
        android:layout_toEndOf="@+id/buttonPhat" />

    <EditText
        android:hint="Nhap ten bai hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTenBH"
        android:layout_below="@+id/buttonDungPhat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:layout_alignRight="@+id/buttonDungPhat"
        android:layout_alignEnd="@+id/buttonDungPhat" />

    <EditText
        android:hint="Nhap mo ta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMoTa"
        android:layout_below="@+id/editTextTenBH"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luu"
        android:id="@+id/buttonLuu"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
